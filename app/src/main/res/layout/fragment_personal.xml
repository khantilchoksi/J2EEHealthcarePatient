        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewPersonal"
        tools:context="com.khantilchoksi.healthcareapp.PersonalFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--ImageView
